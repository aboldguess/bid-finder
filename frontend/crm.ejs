<!DOCTYPE html>
<html>
<head>
  <title>CRM</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>CRM</h1>
  <%- include('partials/nav', { page: 'crm', user: user }) %>

  <h2>Funding Bodies</h2>
  <table>
    <tr><th>Name</th></tr>
    <% if (customers.length === 0) { %>
      <tr><td>No funding bodies found.</td></tr>
    <% } %>
    <% customers.forEach(c => { %>
      <tr><td><%= c.name %></td></tr>
    <% }) %>
  </table>

  <h2>Suppliers</h2>
  <table>
    <tr><th>Name</th></tr>
    <% if (suppliers.length === 0) { %>
      <tr><td>No suppliers found.</td></tr>
    <% } %>
    <% suppliers.forEach(s => { %>
      <tr><td><%= s.name %></td></tr>
    <% }) %>
  </table>

  <h2>People</h2>
  <p>No people data available.</p>

  <script src="/table-tools.js"></script>
</body>
</html>
